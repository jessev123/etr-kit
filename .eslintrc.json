{
  "extends": ["airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parser": "typescript-eslint-parser",
  "plugins": ["typescript", "mocha", "chai-expect", "jest"],
  "rules": {
    "import/extensions": 0,
    "react/jsx-filename-extension": 0,
    "react/no-typos": 0,
    "import/prefer-default-export": 0,
    "function-paren-newline": 0,
    "react/prop-types": 0,
    "valid-jsdoc": [
      "error",
      {
        "prefer": {
          "arg": "param",
          "argument": "param",
          "class": "constructor",
          "return": "returns",
          "virtual": "abstract"
        },
        "preferType": {
          "Boolean": "boolean",
          "Number": "number",
          "object": "Object",
          "String": "string"
        }
      }
    ]
  }
}
